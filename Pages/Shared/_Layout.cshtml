<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DocumentDispatchService</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --ink-0: #0b0f19;
            --ink-1: #0f172a;
            --ink-2: rgba(148,163,184,.15);
            --text-0: #e6e8ef;
            --text-1: #cbd5e1;
            --muted: #94a3b8;
            --accent: #22d3ee;
            --accent2: #6366f1;
            --good: rgba(34,197,94,.14);
            --warn: rgba(245,158,11,.14);
            --bad: rgba(239,68,68,.14);
        }

        #countdown {
            font-variant-numeric: tabular-nums;
        }

        body {
            background: radial-gradient(1200px 600px at 15% 10%, rgba(34,211,238,.18), transparent 60%), radial-gradient(900px 500px at 85% 30%, rgba(99,102,241,.14), transparent 55%), var(--ink-0);
            color: var(--text-0);
        }

        .navbar {
            background: rgba(15, 23, 42, .85);
            border-bottom: 1px solid var(--ink-2);
            backdrop-filter: blur(10px);
        }

        .card {
            background: linear-gradient(180deg, rgba(15,23,42,.95), rgba(15,23,42,.80));
            border: 1px solid var(--ink-2);
            box-shadow: 0 10px 30px rgba(0,0,0,.35);
            border-radius: 16px;
        }

        .card-body {
            padding: 18px;
        }

        .muted {
            color: var(--muted);
        }

        a {
            color: #67e8f9;
            text-decoration: none;
        }

            a:hover {
                color: var(--accent);
                text-decoration: underline;
            }

        code {
            color: #a5b4fc;
        }

        /* Table: keep it dark and cohesive */
        .table {
            --bs-table-color: var(--text-0);
            --bs-table-bg: transparent;
            --bs-table-border-color: var(--ink-2);
            margin-bottom: 0;
        }

            .table thead th {
                color: var(--text-1);
                border-bottom: 1px solid var(--ink-2);
                font-weight: 600;
                letter-spacing: .02em;
                text-transform: uppercase;
                font-size: .75rem;
            }

            .table tbody td {
                border-color: rgba(148,163,184,.10);
                vertical-align: middle;
            }

            .table tbody tr:hover {
                background: rgba(34,211,238,.06);
            }

        .table-responsive {
            border: 1px solid var(--ink-2);
            border-radius: 14px;
            overflow: hidden;
            background: rgba(2,6,23,.25);
        }

        /* Snapshot cards feel more "metric" */
        #snapshot-cards .card {
            position: relative;
            overflow: hidden;
        }

            #snapshot-cards .card::after {
                content: "";
                position: absolute;
                inset: -2px;
                background: radial-gradient(600px 220px at 20% 0%, rgba(34,211,238,.12), transparent 60%), radial-gradient(500px 200px at 90% 30%, rgba(99,102,241,.10), transparent 55%);
                pointer-events: none;
                opacity: .8;
            }

        /* Buttons */
        .btn-outline-info {
            --bs-btn-color: var(--accent);
            --bs-btn-border-color: rgba(34,211,238,.55);
            --bs-btn-hover-bg: rgba(34,211,238,.10);
            --bs-btn-hover-border-color: rgba(34,211,238,.80);
            --bs-btn-hover-color: var(--text-0);
            border-radius: 10px;
        }

        .btn-outline-secondary {
            border-radius: 10px;
        }

        /* Badge pill used for refresh */
        .badge-soft {
            background: rgba(148,163,184,.12);
            color: var(--text-0);
            border: 1px solid var(--ink-2);
            border-radius: 999px;
            padding: 6px 10px;
        }

        /* Row highlighting (dark-friendly) */
        tr.row-warn {
            background: var(--warn) !important;
        }

        tr.row-bad {
            background: var(--bad) !important;
        }

        /* Make form switch blend in */
        .form-check-input {
            cursor: pointer;
        }

        .form-check-label {
            cursor: pointer;
            user-select: none;
        }
    </style>


    @RenderSection("Head", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/ops">DDS Ops</a>
            <div class="ms-auto d-flex gap-2">
                <a class="btn btn-sm btn-outline-info" href="/swagger">Swagger</a>
                <a class="btn btn-sm btn-outline-secondary" href="/metrics">Metrics</a>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
